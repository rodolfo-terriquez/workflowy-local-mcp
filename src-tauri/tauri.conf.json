{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Workflowy Local MCP",
  "version": "1.2.3",
  "identifier": "com.workflowy.local-mcp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build && npm run build:mcp",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Workflowy Local MCP",
        "width": 900,
        "height": 700,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../dist-mcp/**/*"],
    "externalBin": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
